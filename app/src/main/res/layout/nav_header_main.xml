<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/navheader">

    <ImageView
        android:id="@+id/host_photo"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/name_margin" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/name_margin"
            android:text="Yun Duan"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/host_name" />

        <TextView
            android:text="000-000-0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/host_phone"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/host_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android.studio@android.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:text="my address is very long, CA, US 95100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/host_address" />

    </LinearLayout>

</LinearLayout>
